@model OwnerViewModel

<h2>Owner</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var owner in Model.Pets)
        {
            <tr>
                <td>@owner.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Pet" asp-route-id="@owner.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Pet" asp-route-id="@owner.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>
